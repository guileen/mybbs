extends ../withsidebar
block main
  if !isMember
    .pull-right
      form(action='/g/#{group.id}/join', method='post')
        button.btn.btn-primary(type='submit') 加入
  //- h4 #{group.name} 
  ol.breadcrumb
    li: a(href='/') 首页
    li: a(href='/g/#{group.id}')= group.name
    li: a(href='/g/#{group.id}/admin') 管理
    li.active 成员列表

  a.btn.btn-primary(href='/g/#{group.id}/refstats') 我的英雄帖
  a.btn.btn-primary(href='/g/#{group.id}/members') 成员管理

  h4 成员列表

  for member in members
    p
      .btn-group.pull-right
        button.btn.btn-primary.btn-xs 设为管理员
        button.btn.btn-danger.btn-xs 移除
      a(href='/u/#{member.id}')= member.nickname

