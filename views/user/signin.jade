extend ../layout
block variables
  -var title = '欢迎'
  -var bodyClass = 'page-login'
block content
  .container
    .center-block.fixw-sm
      #alertContainer
      ol.breadcrumb
        li: a(href='/') 首页
        li.active 登录
      p
      form#signInForm(action='/signin', method='post')
        .form-group
          label.sr-only(for='InputEmail') 帐号
          input#InputEmail.form-control(name='email', type='text', placeholder='ID/邮箱', autofocus)
        .form-group
          label.sr-only(for='InputPassword') 密码
          input#InputPassword.form-control(name='password', type='password', placeholder='密码')
        button#signInButton.btn.btn-success.btn-block(type='submit') 登录
      p
      .text-center
        a(href='/signup') 注册帐号
        span &nbsp;&nbsp;|&nbsp;&nbsp;
        a(href='') 找回密码

    if code == 'notexists'
      script.
        alertError('用户不存在')

    script.
      autoValidate('#signupform');
